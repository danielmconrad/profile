#!/bin/bash

# General
alias con-profileedit="code $HOME/.bash_profile"
alias con-rcedit="code $HOME/.bashrc"

# Git
alias con-reorigin="git stash && git fetch origin && git checkout master && git reset --hard origin/master && git remote prune origin"
alias con-reupstream="git stash && git fetch upstream && git checkout master && git reset --hard upstream/master && git remote prune upstream && git remote prune origin"

# Apps
alias code='open $@ -a "Visual Studio Code"'

# Go
con-cd-go (){
  if [[ $1 != "" ]]; then
    cd $(find $GOPATH/src -type d -name $1)
  else
    cd "$GOPATH/src"
  fi
}

con-go-test-one(){
  GO_ENV=test go test -test.v $1 -run $2
}

con-git-author(){
  git config user.name "danmconrad"
  git config user.email "dan.m.conrad@gmail.com"
}

con-docker-destroy(){
  docker stop $(docker ps -a -q)
  docker rm $(docker ps -a -q)
  docker system prune --all --force --volumes
  docker volume prune
  docker rmi $(sudo docker images --filter "dangling=true" -q --no-trunc)
  docker rmi $(docker images -a -q)
}
